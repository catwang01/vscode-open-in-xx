{
  "name": "open-in-xx",
  "displayName": "open-in-xx",
  "description": "Open files/directories in any program you configured!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:open-in-xx.openInXX",
    "onCommand:open-in-xx.openRootFolderInXX",
    "onView:explorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "open-in-xx.openInXX",
        "title": "Open in XX"
      },
      {
        "command": "open-in-xx.openRootFolderInXX",
        "title": "Open the root folder in XX"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "open-in-xx.openInXX",
          "group": "navigation"
        },
        {
          "command": "open-in-xx.openRootFolderInXX",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "open-in-xx.openInXX",
          "group": "navigation"
        },
        {
          "command": "open-in-xx.openRootFolderInXX",
          "group": "navigation"
        }
      ],
      "editor/title/context": [
        {
          "command": "open-in-xx.openInXX",
          "group": "navigation"
        },
        {
          "command": "open-in-xx.openRootFolderInXX",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Open in XX",
      "properties": {
        "openInXX.programs": {
          "type": "object",
          "default": {},
          "description": "Configure programs to open files/directories with. Use ${item} for the path. Can be a string command or an object with 'file' and 'directory' properties."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
